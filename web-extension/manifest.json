{
  "manifest_version": 3,
  "name": "Gmail Hotkey Sender",
  "version": "1.0.0",
  "description": "Send Gmail emails using keyboard shortcuts",
  
  "permissions": [
    "activeTab",
    "storage",
    "commands"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "compose-email": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Compose new Gmail email"
    },
    "send-email": {
      "suggested_key": {
        "default": "Ctrl+Alt+S",
        "mac": "Command+Alt+S"
      },
      "description": "Send current Gmail email"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail Hotkey Sender",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
